	};
	
	List<List<string>> tableContent = new List<List<string>>
	{
		new List<string> {"Facebook","1,480","60%","bg-red-200","bg-red-500"  },
		new List<string> {"Facebook","5,480","70%","bg-emerald-200","bg-emerald-500"   },
